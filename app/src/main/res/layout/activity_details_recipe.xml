<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:background="?android:attr/selectableItemBackground"
android:clickable="true"
android:focusable="true"
android:orientation="vertical"
android:paddingBottom="@dimen/row_padding_vertical"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/row_padding_vertical">

<TextView
    android:id="@+id/tv_display"
    android:layout_width="368dp"
    android:layout_height="30dp"
    android:layout_marginEnd="8dp" />

<TextView
    android:id="@+id/tv_display_ingredient_recipe"
    android:layout_width="368dp"
    android:layout_height="30dp"
    android:layout_below="@id/tv_display" />

<TextView
    android:id="@+id/tv_display_ingredient_quantity"
    android:layout_width="wrap_content"
    android:layout_height="30dp"
    android:layout_below="@id/tv_display"
    android:layout_toRightOf="@id/tv_display_ingredient_recipe"/>

<TextView
    android:id="@+id/tv_display_ingredient_unit"
    android:layout_width="wrap_content"
    android:layout_height="30dp"
    android:layout_below="@id/tv_display"
    android:layout_toRightOf="@id/tv_display_ingredient_quantity" />

</RelativeLayout>